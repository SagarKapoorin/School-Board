<% layout('Layout/boilerplate.ejs') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/Quiz-show.css">
    <title>Notes</title>
</head>
<body>
    <div class="main-notes">
        <h1> <span class="head">M</span>
            <span class="head">Y</span>
            <span class="head"> &nbsp; &nbsp;</span>
            <span class="head">Q</span>
            <span class="head">U</span>
            <span class="head">I</span>
            <span class="head">Z</span>
            <span class="head">S</span>
        </h1>
        <div class="Note-corner">
                <% if (N.length > 0) { %>
                    <% for (let i = 0; i < N.length; i++) { %>
                        <div class="card">
                        <ul>
                            <li><span class="">Quiz no.</span> <%- i+1 %></li>
                            <li><span class="">Attempted:</span> <%= N[i].Total_question %></li>
                            <li><span class="">Content:</span> <%- N[i].Correct %></li>
                            <li><span class="">Score:</span> <%- N[i].Correct/N[i].Total_question %></li>
                            <br>
                        </ul>
                    </div>
                    <% } %>
                <% } else { %>
                    <p class="No_Note">No Quiz found.</p>
                    <img src="src/Profile_a.svg" class="notfound-image">
                <% } %>
            </div>
    </div>
    <img src="src/Quiz_save_b.svg" class="Quiz-save-image">
</body>
</html>