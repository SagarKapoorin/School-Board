<% layout('Layout/boilerplate.ejs') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snake-Game</title>
    <link rel="stylesheet" href="css/Snake.css">
</head>
<body>
    <h3 style="color:red">*Press Any Key To Start</h3>
    <div class="wrapper">
        <div class="game-details">
          <span class="score">Score: 0</span>
          <% let sc = 0 %>
          <% for( let i=0;i<data[0].Games.length;i++){ %>
            <% if(data[0].Games[i].genre=="snake"){ %>
             <% sc=data[0].Games[i].score>sc?data[0].Games[i].score:sc %>
            <% } %>
           <% } %>
          <span class="high-score">High Score: <%= sc  %></span>
        </div>
        <div class="play-board"></div>
        <div class="controls">
          <i data-key="ArrowLeft" class="fa-solid fa-arrow-left-long"></i>
          <i data-key="ArrowUp" class="fa-solid fa-arrow-up-long"></i>
          <i data-key="ArrowRight" class="fa-solid fa-arrow-right-long"></i>
          <i data-key="ArrowDown" class="fa-solid fa-arrow-down-long"></i>
        </div>
      </div>
      <img src="src/Game_a.svg" class="Game_a">
    <script src="js/Snake.js"></script>
</body>
</html>